FROM python:3.10-slim

RUN apt-get update && apt-get install -y \
    libglib2.0-0 \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY requirements.txt .

RUN pip install --no-cache-dir -r requirements.txt

RUN python -c "from sentence_transformers import SentenceTransformer; SentenceTransformer('dangvantuan/vietnamese-document-embedding', trust_remote_code=True)"

COPY . .

CMD ["python", "worker.py"]